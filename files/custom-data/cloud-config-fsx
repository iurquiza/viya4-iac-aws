#cloud-config
system_info:
  default_user:
    name: ec2-user
    sudo: ALL=(ALL) NOPASSWD:ALL

#
# First we'll update the repo and then update the OS.
#
package_update: true
package_upgrade: true

#
# Install Lustre client
#
runcmd:
  - amazon-linux-extras install -y lustre2.10

#
# Update /etc/fstab
#
mounts:
  - ${mounts}
